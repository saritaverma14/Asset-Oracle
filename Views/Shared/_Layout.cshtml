<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                @if (Session["LoginUser"] != null)
                {
                    <b> @Html.ActionLink("Service Virtualization – Test Data Management Portal", "Index", "Service", null, new { @class = "navbar-brand" })</b>

                }
                else
                {
                    <b> @Html.ActionLink("Service Virtualization – Test Data Management Portal", "LoginUser", "Login", null, new { @class = "navbar-brand" })</b>

                }
            </div>

            <ul class="nav navbar-nav navbar-right">
               
                @if (Session["LoginUser"] != null)
                {
                    <b style="color:white">
                        Welcome @Html.Raw(Session["LoginUser"].ToString())
                        (<b>
                            @Html.Raw(Session["Role"].ToString())
                        </b>
                        )
                        <li>@Html.ActionLink("Logout", "Logout", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    </b>
                }
                else
                {

                    <li>@Html.ActionLink("Register", "SignUpUser", "Login", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink("Login", "LoginUser", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                }
            </ul>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Accenture. All Right Reserved. Accenture Highly Confidential. For Internal Use Only.....</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>