@model Asset_Oracle.Models.LOGIN
@{
    ViewBag.Title = "Service Virtualization Test Data MAnagement Portal";
}

<div class="container">
    <a class="acn-logo" title="Accenture" data-rel="856d2796-13ab-4036-9c60-87b846b6dea1" data-name="asset" data-linktype="navigationsettings:logo" tabindex="0">
        <img src="//www.accenture.com/t20171113T020841Z__w__/us-en/_acnmedia/Accenture/Dev/ComponentImages/logo-accenture.svg" alt="Accenture" style="text-align:right;" />
    </a>
    @using (Html.BeginForm("LoginUser", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()



        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Sign In</div>
                </div>
                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                    <form id="loginform" class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="lastname" class="col-md-3 control-label">User Name</label>
                            <div class="input-group col-md-9">
                                @Html.TextBoxFor((model => model.USERNAME), new { @class = "form-control", @placeholder = "Enter User Name", @autofocus = true })
                                <br />

                                @Html.ValidationMessageFor(model => model.USERNAME, string.Empty, new { @class = "error-message text-danger", @style = "color: red" })
                                <br />

                            </div>
                        </div>
                        <br />


                        <div class="form-group">
                            <label for="password" class="col-md-3 control-label">Password</label>
                            <div class="input-group col-md-9">
                                @Html.TextBoxFor((model => model.PASSWORD), new { @class = "form-control", @type = "password", @placeholder = "Enter Password", @autofocus = true })
                                <br />

                                @Html.ValidationMessageFor(model => model.PASSWORD, string.Empty, new { @class = "error-message text-danger", @style = "color: red" })
                                <br />

                            </div>
                        </div>
                       
                        <div class="form-group row ">
                            <!-- Button -->
                            <div class="col-md-offset-3 input-group col-md-9">
                                <b style="color:red;text-align:left;">@Html.Raw(TempData["loginmsg"])</b>

                            </div>
                        </div>


                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 input-group col-md-9">
                                <button id="btnlogin" name="Login" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Login</button>

                            </div>
                        </div>

                        <br />
                        <br />
                        <div class="col-md-12 control row">
                            <div style="padding-top:15px; font-size:85%">
                                Don't have an account!
                                <a href="~/Login/SignUpUser">
                                    sign up here
                                </a>
                            </div>
                        </div>


                    </form>
                </div>


            </div>
        </div>

    }
</div>
@Html.Raw(TempData["logout"])
@Html.Raw(TempData["message"])